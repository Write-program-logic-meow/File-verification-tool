        <TextBox x:Name="TextBox1" HorizontalAlignment="Left" Margin="90,260,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="269"/>
        <TextBox x:Name="TextBox2" HorizontalAlignment="Left" Margin="90,300,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="269"/>
